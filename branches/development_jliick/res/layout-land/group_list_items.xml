<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="1dp">

	<ImageView android:id="@+id/group_list_items_image"
		android:layout_width="54dp" android:layout_height="70dp"
		android:minWidth="54dp" android:minHeight="70dp"
		android:layout_marginRight="10dp" android:background="@drawable/border1" />

	<TextView android:id="@+id/group_list_items_title"
        android:layout_width="340dp" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/group_list_items_image" android:maxLines="2"
        android:ellipsize="end" style="@style/whitemed" />
    <TextView android:id="@+id/group_list_items_authors"
        android:layout_width="340dp" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/group_list_items_image"
        android:layout_below="@id/group_list_items_title" android:maxLines="2"
        android:ellipsize="end" style="@style/greytiny" />   

	<CheckBox android:id="@+id/group_list_items_in_group"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="5dp" android:layout_marginRight="3dp"
		android:layout_toRightOf="@id/group_list_items_authors"
		android:gravity="right" android:enabled="true" android:focusable="true" />
</RelativeLayout>