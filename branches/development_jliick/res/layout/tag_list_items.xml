<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="1dp">

	<ImageView android:id="@+id/tag_list_items_image"
		android:layout_width="54dp" android:layout_height="70dp"
		android:minWidth="54dp" android:minHeight="70dp"
		android:layout_marginRight="10dp" android:background="@drawable/border1" />

	<TextView android:id="@+id/tag_list_items_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tag_list_items_image" android:layout_marginRight="40dp"
        android:maxLines="2" android:ellipsize="end" style="@style/whitesmall" />
    <TextView android:id="@+id/tag_list_items_authors"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tag_list_items_image"  android:layout_marginRight="40dp"
        android:layout_below="@id/tag_list_items_title" android:maxLines="2"
        android:ellipsize="end" style="@style/greytiny" />   

	<CheckBox android:id="@+id/tag_list_items_tagged"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="3dp"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		android:enabled="true" android:focusable="true" />
	<TextView android:id="@+id/tag_books_position"	
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="15dp"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		style="@style/greysmallbold" />	
</RelativeLayout>